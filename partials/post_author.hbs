{{! Everything inside the #author tags pulls data from the author }}
{{#primary_author}}
{{#if profile_image}}
<figure class="author-image">
    <a class="img" href="{{url}}" style="background-image: url({{img_url profile_image}})"><span class="hidden">{{name}}'s Picture</span></a>
</figure>
{{/if}}
{{/primary_author}}
<figure class="author-info">
    <section class="author-info-title">
        <span><time class="post-date pull-right" datetime="{{date format='YYYY-MM-DD'}}">更新于：{{date updated_at format="YYYY-MM-DD"}}</time></span>
        {{#primary_author}}
        <span>作者：{{name}}</span>
    </section>
    <section class="author-info-content">
        {{#if bio}}
            <span class="author-info-bio">{{bio}}</span>
        {{else}}
            <p>查看此作者的 <a href="{{url}}">更多文章</a> 。</p>
        {{/if}}
        <section class="author-info-social">

            <a href="https://github.com/xmsec" class="author-info-social-github">GitHub</a>

        </section>
        {{/primary_author}}
    </section>
</figure>
